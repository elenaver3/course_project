<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="381.0" prefWidth="616.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.course_project.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <TableView fx:id="dishesTable" prefHeight="200.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="idIngredient" prefWidth="28.79998779296875" text="id" />
                <TableColumn fx:id="ingredientName" prefWidth="296.0000305175781" text="Ингредиент" />
                <TableColumn fx:id="muName" minWidth="0.0" prefWidth="253.59991455078125" text="Единица измерения" />
                <TableColumn fx:id="dishAmount" prefWidth="545.6000671386719" text="Количество" />
            </columns>
        </TableView>
        <Button fx:id="addData" mnemonicParsing="false" onAction="#addIngInThatDish" text="Добавить запись" />
        <Button fx:id="updateIngInDish" mnemonicParsing="false" onAction="#updateIngInDish" text="Обновить запись" />
        <Button fx:id="deleteIngInDish" mnemonicParsing="false" onAction="#deleteIngInDish" text="Удалить запись" />
        <Button fx:id="updateTableIngInDish" mnemonicParsing="false" onAction="#onUpdateTableIngInDish" text="Загрузить данные" />
        <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backToDishes" text="Назад" />
    </children>
</VBox>
