<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="363.0" prefWidth="699.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.course_project.IngredientController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <TableView fx:id="ingTable" prefHeight="200.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="idIngredient" prefWidth="28.79998779296875" text="id" />
                <TableColumn fx:id="ingredientName" prefWidth="199.20001983642578" text="Ингредиент" />
                <TableColumn fx:id="muName" minWidth="0.0" prefWidth="197.5999755859375" text="Единица измерения" />
            <TableColumn fx:id="ingAmount" minWidth="0.0" prefWidth="227.99996948242188" text="Количество на складе" />
            </columns>
        </TableView>
        <Button fx:id="addData" mnemonicParsing="false" onAction="#addIngredientView" text="Добавить запись" />
        <Button fx:id="updateIng" mnemonicParsing="false" onAction="#updateIngredients" text="Обновить запись" />
        <Button fx:id="deleteIng" mnemonicParsing="false" onAction="#deleteIngredients" text="Удалить запись" />
        <Button fx:id="updateTableIng" mnemonicParsing="false" onAction="#onUpdateTableIng" text="Загрузить данные" />
        <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backToMenu" text="Назад" />
    </children>
</VBox>
