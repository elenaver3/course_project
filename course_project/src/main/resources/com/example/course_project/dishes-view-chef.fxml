<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="572.0" prefWidth="616.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.course_project.DishController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <TableView fx:id="dishesTable" prefHeight="200.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="idDish" prefWidth="28.79998779296875" text="id" />
                <TableColumn fx:id="dishName" prefWidth="545.6000671386719" text="Название блюда" />
            </columns>
        </TableView>
        <Button fx:id="addDataIngInDish" mnemonicParsing="false" onAction="#addIngredientsInDish" text="Добавить ингредиенты в блюдо" />
        <Button fx:id="addData" mnemonicParsing="false" onAction="#addDishViewChef" text="Добавить запись" />
        <Button fx:id="updateDish" mnemonicParsing="false" onAction="#updateDishesChef" text="Обновить запись" />
        <Button fx:id="deleteDish" mnemonicParsing="false" onAction="#deleteDishes" text="Удалить запись" />
        <Button fx:id="updateTableDish" mnemonicParsing="false" onAction="#onUpdateTableDishes" text="Загрузить данные" />
        <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backToMenuChef" text="Назад" />
    </children>
</VBox>
