<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="374.0" prefWidth="663.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.course_project.TableController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <TableView fx:id="tablesTable" prefHeight="200.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="idTable" prefWidth="28.79998779296875" text="id" />
                <TableColumn fx:id="tableNumber" prefWidth="296.0000305175781" text="Номер столика" />
                <TableColumn fx:id="tableMaxPeople" minWidth="0.0" prefWidth="253.59991455078125" text="Максимальное количество людей" />
            </columns>
        </TableView>
        <Button fx:id="addData" mnemonicParsing="false" onAction="#addTablesView" text="Добавить запись" />
        <Button fx:id="updateTables" mnemonicParsing="false" onAction="#updateTables" text="Обновить запись" />
        <Button fx:id="deleteTables" mnemonicParsing="false" onAction="#deleteTables" text="Удалить запись" />
        <Button fx:id="updateTableTables" mnemonicParsing="false" onAction="#onUpdateTableTables" text="Загрузить данные" />
        <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backToMenu" text="Назад" />
    </children>
</VBox>
